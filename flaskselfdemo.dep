apiVersion: apps/v1
kind: Deployment
metadata:
  name: flaskselfdemo
  namespace: default
  labels:
    app: flaskselfdemo
spec:
  replicas: 3
  selector:
    matchLabels:
      app: flaskselfdemo
  template:
    metadata:
      labels:
        app: flaskselfdemo
    spec:
      containers:
      - name: flaskselfdemo
        image: ccr.ccs.tencentyun.com/tke-chaos/flask_self_demo:1.0.2
        ports:
        - containerPort: 80
          name: web80
        resources:
          limits:
            cpu: 300m
            memory: 300M
          requests:
            cpu: 100m
            memory: 100M
---

apiVersion: v1
kind: Service
metadata:
  name: flaskselfdemo-service
  namespace: default
  labels:
    app: flaskselfdemo
    app: flaskselfdemo-service
spec:
  type: NodePort
  ports:
  - port: 80
    # nodePort: 30080
    targetPort: web80
    protocol: TCP
  selector:
    app: flaskselfdemo
